<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.socket.client.MainScreenController"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@main-style.css" styleClass="root" alignment="CENTER" spacing="20.0">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <ImageView fx:id="userAvatar"
               fitHeight="100.0"
               fitWidth="100.0"
               pickOnBounds="true"
               preserveRatio="true"
               styleClass="user-avatar"/> <Label text="User Info" styleClass="title-label"/>
    <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
    <Button fx:id="joinButton" text="Join" onAction="#handleJoinButtonClick" styleClass="join-button"/>
</VBox>